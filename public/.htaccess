<IfModule mime_module>
    AddHandler application/x-httpd-alt-php82 .php
</IfModule>

<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On
    RewriteBase /

    # Preserve headers
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirect trailing slashes
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # === Serve SPA for root URL (so / shows public/spa/index.html) ===
    RewriteRule ^$ /spa/index.html [L]

    # If the requested resource exists as a file or folder, serve it directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # API requests -> Laravel front controller
    RewriteRule ^api(/.*)?$ index.php [L,QSA]

    # Direct PHP requests -> Laravel
    RewriteRule \.php$ index.php [L,QSA]

    # Everything else -> SPA index
    RewriteRule ^ /spa/index.html [L]
</IfModule>
